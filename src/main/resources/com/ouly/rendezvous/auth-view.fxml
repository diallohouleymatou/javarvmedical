<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.ouly.rendezvous.controller.AuthController"
      styleClass="root">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <VBox styleClass="card" maxWidth="400" spacing="15">
        <Label text="Connexion" styleClass="title"/>

        <TextField fx:id="emailField" promptText="Email" styleClass="text-field"/>
        <PasswordField fx:id="passwordField" promptText="Mot de passe" styleClass="text-field"/>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="S'inscrire" onAction="#onInscriptionClick" styleClass="button"/>
            <Button text="Se connecter" onAction="#onConnexionClick" styleClass="button"/>
        </HBox>

        <Label fx:id="errorLabel" styleClass="error-label"/>
    </VBox>
</VBox>
